#include<stdio.h>
using namespace std;

//Escreva um programa que calcule o fatorial de um número informado
pelo usuário.
Dica: O fatorial de um número N é dado pela fórmula: N! = 1 * 2 * 3 * 4 * 5 * ... * N

int main() {

	int i, num;
	
	printf("\nInforme um numero: ");
	scanf("%d%*c",&num);

	int f = 1;

	for (i=1; i<=num; i++) {
		f = f * i;
	}

	printf("\nO fatorial de %d eh: %d ", num, f);

	return 0;
} 
