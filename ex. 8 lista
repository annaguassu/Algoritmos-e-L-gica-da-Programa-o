#include<stdio.h>

//Elabore um programa que preencha uma matriz 6 x 4 com números
inteiros, calcule e mostre quantos elementos dessa matriz são maiores que 30 e, em
seguida, monte uma segunda matriz com os elementos diferentes de 30. No lugar do
número 30, da segunda matriz, coloque o número zero.

int main()
{
    int i, j, mat[6][4], c=0;
    for( i=0; i<6; i++ )
    {
        for( j=0; j<4; j++ )
        {
           printf("Digite o valor de [%d][%d] = ", i+1, j+1);
           scanf("%d", &mat[i][j]);
           if( mat[i][j] > 30 )
           {
            c++;
            
           }
        }
    }
    printf("\n\n números maiores que 30 = %d \n\n", c);
  return 0;    
}
//half
